# parsing functions
# $? is the token list of the **current scope**

$printName=[
	$tl=\;
	$firstName = $tl.nextString\;
	$lastName = $tl.nextString\;
	$originalName = $tl.seekString="os"\.if: [
		$tl.accept:"os"\;
		$tl.accept:"."\;
		$tl.nextString
	], [$lastName]\\;
	($firstName+_+$lastName+_+"os"+_+$originalName).println;
	'
]\;

