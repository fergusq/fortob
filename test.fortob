# another way to do the same thing

@printName[
	$firstName = $!.nextString\;
	$lastName = $!.nextString\;
	$originalName = $!.seekString="os"\.if: [
                $!.accept:"os"\;
                $!.accept:"."\;
                $!.nextString
        ], [$lastName]\\;
	($firstName+_+$lastName+_+"os"+_+$originalName).println;
	$\.push:'\;
]\;

